{
  "env": {
    "browser": true,
    "es6": true,
    "jest": false,
    "node": true
  },
  "extends": ["standard"],
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "rules": {
    "no-undef": "off",
    "indent": [
      "error",
      2,
      {
        "MemberExpression": 0
      }
    ],
    "implicit-arrow-linebreak": "off",
    "class-methods-use-this": 0,
    "guard-for-in": 0,
    "allowElseIf": 0,
    "key-spacing": [
      2,
      {
        "singleLine": {
          "beforeColon": false,
          "afterColon": true
        }
      }
    ],
    "function-paren-newline": [
      "error",
      {
        "minItems": 5
      }
    ],
    "array-element-newline": ["error", "always"],
    "array-bracket-newline": [
      "error",
      {
        "minItems": 1
      }
    ],
    "array-bracket-spacing": ["error", "always"],
    "comma-dangle": ["error", "never"],
    "operator-linebreak": [
      "error",
      "after",
      {
        "overrides": {
          "?": "before",
          ":": "before"
        }
      }
    ],
    "newline-per-chained-call": [
      "error",
      {
        "ignoreChainWithDepth": 4
      }
    ],
    "object-curly-spacing": ["error", "always"],
    "object-curly-newline": [
      "error",
      {
        "ObjectExpression": "always",
        "ObjectPattern": {
          "multiline": true,
          "minProperties": 7
        },
        "ImportDeclaration": "never",
        "ExportDeclaration": {
          "multiline": true,
          "minProperties": 3
        }
      }
    ],
    "object-property-newline": [
      "error",
      {
        "allowAllPropertiesOnSameLine": false
      }
    ],
    "padded-blocks": [
      1,
      {
        "classes": "always",
        "blocks": "always"
      },
      {
        "allowSingleLineBlocks": true
      }
    ],
    "semi": ["error", "never"],
    "padding-line-between-statements": [
      "error",
      {
        "blankLine": "any",
        "prev": "cjs-export",
        "next": "*"
      }
    ]
  }
}
